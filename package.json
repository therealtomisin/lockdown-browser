{
  "name": "lockdown-browser",
  "version": "1.0.0",
  "description": "Secure lockdown browser for assessments",
  "main": "dist/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "tsc && cp -r src/renderer dist/",
    "dist": "npm run build && electron-builder",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "typescript": "^5.3.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.lockdown.browser",
    "productName": "Lockdown Browser",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}